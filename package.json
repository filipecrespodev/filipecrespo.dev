{
  "name": "filipecrespo-dev",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "vue-tsc --noEmit",
    "stylelint": "stylelint \"**/*.{css,vue}\"",
    "stylelint:fix": "stylelint \"**/*.{css,vue}\" --fix",
    "audit": "bun audit",
    "depcheck": "depcheck",
    "validate": "bun run type-check && bun run lint && bun run stylelint && bun run format:check",
    "a11y:audit": "lhci autorun",
    "a11y:test": "pa11y-ci",
    "migrate:posts": "tsx scripts/migrate-posts-to-supabase.ts",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,ts,vue,mjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,vue}": [
      "stylelint --fix"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@nuxt/eslint": "1.12.1",
    "@nuxt/fonts": "0.12.1",
    "@nuxt/hints": "1.0.0-alpha.4",
    "@nuxt/icon": "2.1.1",
    "@nuxt/image": "2.0.0",
    "@nuxt/scripts": "0.13.1",
    "@nuxt/test-utils": "3.21.0",
    "@nuxt/ui": "^4.3.0",
    "@supabase/supabase-js": "^2.88.0",
    "@unhead/vue": "^2.0.19",
    "better-sqlite3": "^12.5.0",
    "eslint": "^9.39.2",
    "gray-matter": "^4.0.3",
    "marked": "^17.0.1",
    "nuxt": "^4.2.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@lhci/cli": "^0.15.1",
    "axe-core": "^4.11.0",
    "depcheck": "^1.4.7",
    "dotenv": "^17.2.3",
    "eslint-plugin-vuejs-accessibility": "^2.4.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "pa11y-ci": "^4.0.1",
    "postcss-html": "^1.8.0",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "stylelint": "^16.26.1",
    "stylelint-config-recommended-vue": "^1.6.1",
    "stylelint-config-standard": "^39.0.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite-plugin-inspect": "^11.3.3",
    "vue-tsc": "^3.1.8"
  }
}
